{% extends 'base.html.twig' %}

{% block title %}Nouveau client | JVGO{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<!-- Style CSS -->		
<link rel="stylesheet" href="/assets/login/style.css">
{% endblock %}

{% block header %}{% endblock %}

{% block footer %}{% endblock %}

{% block body %}
<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-5">
				<div class="login-wrap p-4 p-md-5">
					<div class="icon d-flex align-items-center justify-content-center">
						<span class="fa fa-user-o"></span>
					</div>
					<h3 class="text-center mb-4">Nouveau client?</h3>

					<form role="form" method="post" action="" enctype="multipart/form-data" class="login-form">

						<!-- Nom -->
						<div class="form-group">
							<label>Nom du client *</label>
							<input type="text" name="nom" class="form-control" placeholder="Le nom du client" required/>
						</div>

						<div class="form-group">
							<label>Email *</label>
							<input type="email" name="email" id="email" class="form-control" placeholder="L'adresse email du client" required/>
						</div>

						<div class="form-group">
							<label>Numéro de téléphone</label>
							<input type="text" name="telephone" id="telephone" class="form-control" placeholder="Le numéro de téléphone du client" required/>
						</div>

						<div class="form-group">
							<label>Mot de passe *</label>
							<input type="password" name="password" class="form-control" placeholder="Le mot de passe" required/>
						</div>

						<div class="form-group">
							<label>Entreprise</label>
							<input type="text" name="entreprise" placeholder="Le nom de son entreprise" class="form-control"/>
						</div>

						<div class="form-group">
							<label>Statut du dossier *</label>
							<select name="statut" class="form-control" required>
								<option value="" disabled selected hidden>-- Choisir --</option>
								<option value="Demande envoyer">Demande envoyer</option>
								<option value="Demande en cours de traitement">Demande en cours de traitement</option>
								<option value="Terminer">Terminer</option>
							</select>
						</div>
						<div class="form-group" style="margin-bottom: 3%">
							<button type="submit" class="btn-home-border p-3 px-5">Enregistrer</button>
						</div>
					</form>

				</div>



				<div class="text-center mt-4">
					<a href="{{ path('login') }}">Connexion?</a>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}

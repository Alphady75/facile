{% extends 'base_admin.html.twig' %}

{% block title %}Espace d'administration | JVGO{% endblock %}

{% block body %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1 style="font-size: 26px; font-weight: 700;">Bienvenue dans votre espace d'administration</h1>
        <p style="padding-top: 10px;">Mettez à jours le statuts des dossiers.</p>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-5">
                <div class="card" style="width: 100%; border: 1px solid #e2eded; box-shadow: 0 0 2px 0 #e2eded; padding: 0px 4% 20px 4%; border-radius: 3px;">
                    <div class="card-body">
                        <h2 class="card-title" style="font-size: 20px; font-weight: 700;">Mes clients :</h2>
                        <a href="{{path('dashboard.clients')}}">{{clients | length}} clients</a>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="card" style="width: 100%; border: 1px solid #e2eded; box-shadow: 0 0 2px 0 #e2eded; padding: 0px 4% 20px 4%; border-radius: 3px;">
                    <div class="card-body">
                        <h2 class="card-title" style="font-size: 20px; font-weight: 700;">Article publiés :</h2>
                        <a href="{{path('dashboard.articles')}}">{{articles | length}} articles</a>
                    </div>
                </div>
            </div>
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
{% endblock %}
